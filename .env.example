# Slack App Credentials
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_SIGNING_SECRET=your-signing-secret

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/slack_question_router

# App Configuration
NODE_ENV=development

# Logging (Optional)
# Log level: debug, info, warn, error - defaults to debug in dev, info in prod
LOG_LEVEL=debug
# Enable file logging in development (disabled by default, always on in production)
ENABLE_FILE_LOGGING=false

# Health Check Server (Optional)
# Port for HTTP health check endpoint - defaults to 3000
HEALTH_CHECK_PORT=3000

# Retry Configuration (Optional)
# Maximum retry attempts for Slack API calls - defaults to 4
MAX_RETRY_ATTEMPTS=4
# Initial retry delay in milliseconds - defaults to 1000
RETRY_INITIAL_DELAY_MS=1000
# Maximum retry delay in milliseconds - defaults to 60000
RETRY_MAX_DELAY_MS=60000

# Escalation Settings (in minutes) - Optional, defaults shown
# These are fallback values used when creating new workspace configs
FIRST_ESCALATION_MINUTES=120
SECOND_ESCALATION_MINUTES=240
