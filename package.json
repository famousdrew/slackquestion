{
  "name": "slack-question-router",
  "version": "1.0.0",
  "description": "A Slack bot that monitors channels for unanswered questions and intelligently routes them to experts",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "postinstall": "prisma generate",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio"
  },
  "keywords": [
    "slack",
    "bot",
    "question-routing",
    "support"
  ],
  "author": "Drew",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "@slack/bolt": "^4.6.0",
    "dotenv": "^17.2.3",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "jest": "^30.2.0",
    "prisma": "^6.19.0",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
